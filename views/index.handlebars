
<div class="container">
  <div class="row">
    <div class="title col-12">
        <img src="assets/img/burger.png" class="img" alt="Cheeseburger">
        <h1>Eat-Da-Burger!</h1>
    </div>
  </div> 

  <div class="row">
    <div class="col-6">

      {{#each burger}}
        {{#unless devoured}}
          <p>
          {{this.id}}. {{this.burger_name}}
          
          <button type="submit" data-id="{{this.id}}" class="btn btn-primary devourBtn">Devour!</button>
         </p>
        {{/unless}}
      {{/each}}

    </div>

    <div class="col-6">
      
      {{#each burger}}
        {{#if devoured}}
         <p>
          {{this.id}}. {{this.burger_name}}
          </p> 
        {{/if}}
      {{/each}}
      
    </div>
  </div>
  

  <form>
      <div class="create-form">
          <input type="text" class="form-control" id="addburger">
          <label for="exampleInputPassword1">Enter a burger and click "Submit".</label>
      </div>
      <button type="submit" class="btn btn-primary create-form">Submit</button>
  </form>


</div>





